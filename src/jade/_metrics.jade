mixin metrics-item(title)
  table.three.columns
    tr
      td.metric
        .metric-title= title
        img.metric-chart(src="assets/chart-filler.png", width="145", height="65")
      td.expander

table.row
  tr
    td.wrapper.last
      table.twelve.columns
        tr
          td.text-pad
            h3.section-title Your Metrics
            img.kpi-icon(src="assets/ga-icon.png", width="16", height="16")
            h4.section-subtitle Borrowed & Blue
            table.metric-row.row
              tr
                td.wrapper
                  +metrics-item(
                    "Ad Clicks"
                  )
                td.wrapper
                  +metrics-item(
                    "Organic Searches"
                  )
                td.wrapper
                  +metrics-item(
                    "Visits"
                  )
                td.wrapper.last
                  +metrics-item(
                    "Visitors"
                  )
            img.kpi-icon(src="assets/facebook-icon.png", width="16", height="16")
            h4.section-subtitle Borrowed & Blue
            table.metric-row.row
              tr
                td.wrapper
                  +metrics-item(
                    "Impressions"
                  )
                td.wrapper
                  +metrics-item(
                    "Page Links"
                  )
                td.wrapper.last
                  +metrics-item(
                    "Page Visits"
                  )
          td.expander
